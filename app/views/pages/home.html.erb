           if(square_x < 740){
               square_x += 10
               red_box.style.left = square_x.toString() + "px";
               console.log(square_x);
               evaluateWin();
               left_key = 0;
               up_key = 0;
               down_key = 0;
               //console.log(loose_box.style.top);
               if(hit == 1){
                   square_x -= 20
                   hit = 0;
               }
           }
       }
       //a key
       if(press.keyCode == 65 || press.keyCode === 37){
