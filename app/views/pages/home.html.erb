<%= javascript_tag do %>

    var button = document.createElement("Button");
    var title = document.createElement("H1");
    var title_name = document.createTextNode("This is the Title!");
    var button_name = document.createTextNode("Hello");
    var form = document.createElement("div");
    var form_input = document.createElement("input");
    var red_box = document.createElement("div");
    
    title.appendChild(title_name);
    button.appendChild(button_name);
    form.appendChild(form_input);
    
    form.setAttribute("id", "j-form");
    button.setAttribute("class", "btn btn-sm btn-warning");
    title.setAttribute("class", "turn_red well col-md-6 col-md-offset-3", "id", "title");
    red_box.setAttribute("class", "redbox");
    //document.body.style.backgroundImage = rl('http://www.planwallpaper.com/static/images/recycled_texture_background_by_sandeep_m-d6aeau9_PZ9chud.jpg')"
    
    document.body.appendChild(title);
    document.body.appendChild(button);
    document.body.appendChild(form);
    document.body.appendChild(red_box);
    
    function arrayIt(array){
        array = array.split(' ');
        console.log(array);
    };
    
   document.body.style.display = "none";
   $(document).ready(function(){
   $("body").fadeIn(2000).slow();
   });
   
   //x axis
   var square_x = 10;
   //y axis
   var square_y = 300;
   
   function moveTick(e){
       document.body.onkeyup = function(e){
       press = e || window.event
           if(press.keyCode === 68){
               square_x += 10
               red_box.style.left = square_x.toString() + "px";
               console.log(square_x);
           }
           if(press.keyCode == 65){
               square_x -= 10
               red_box.style.left = square_x.toString() + "px";
               console.log(square_x);
           }
           if(press.keyCode == 87){
               square_y -= 10
               red_box.style.top = square_y.toString() + "px";
               console.log(square_y);
           }
           if(press.keyCode == 83){
               square_y += 10
               red_box.style.top = square_y.toString() + "px";
               console.log(square_y);
           }
       };
   };
   setInterval("moveTick()", 10);
    
    
<% end %>
